<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />
	<constant name="struts.enable.SlashesInActionNames" value="true" />
	<constant name="struts.mapper.alwaysSelectFullNamespace"
		value="false" />

	<package name="json" extends="json-default">
		<!-- Adding a lesson group -->
		<action name="lessongroup/add"
			class="nl.scalda.pasimo.controller.employeemanagement.LessonGroupListingAction"
			method="addLessonGroup">
			<result name="success" type="json"></result>
		</action>

		<!-- Updating a lesson group name -->
		<action name="lessongroup/details/updatename"
			class="nl.scalda.pasimo.controller.employeemanagement.LessonGroupDetailsAction"
			method="updateLessonGroupName">
			<result name="success" type="json"></result>
		</action>

		<!-- Adding students to a lesson group -->
		<action name="lessongroup/details/students/add"
			class="nl.scalda.pasimo.controller.employeemanagement.LessonGroupDetailsAction"
			method="addStudent">
			<result name="success" type="json"></result>
		</action>

		<!-- Deleting students from a lesson group -->
		<action name="lessongroup/details/students/delete"
			class="nl.scalda.pasimo.controller.employeemanagement.LessonGroupDetailsAction"
			method="deleteStudent">
			<result name="success" type="json"></result>
		</action>
		<!-- Deleting a lesson group -->
		<action name="lessongroup/delete"
			class="nl.scalda.pasimo.controller.employeemanagement.LessonGroupListingAction"
			method="deleteLessonGroup">
			<result name="success" type="json"></result>
		</action>

	</package>

	<package name="alles" extends="struts-default">
