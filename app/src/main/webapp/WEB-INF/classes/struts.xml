<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.devMode" value="true" />
    <constant name="struts.enable.SlashesInActionNames" value="true" />
    <constant name="struts.mapper.alwaysSelectFullNamespace"
              value="false" />

    <package name="alles" extends="struts-default">
        <action name="lessongroup"
                class="nl.scalda.pasimo.controller.employeemanagement.LessonGroupController"
                method="execute">
            <result name="success">/view/employeemanagement/lessongroup/index.jsp
            </result>
        </action>
        <action name="lessongroup/details"
                class="nl.scalda.pasimo.controller.employeemanagement.LessonGroupController"
                method="execute">
            <result name="success">/view/employeemanagement/lessongroup/details.jsp
            </result>
        </action>
        <action name="teacherOverview"
                class="nl.scalda.pasimo.controller.employeemanagement.TeacherController"
                method="readTeacher">
            <result name="success">/view/employeemanagement/teacher/teacherOverview.jsp
            </result>
        </action>

        <action name="lessongroup" class="nl.scalda.pasimo.controller.employeemanagement.LessonGroupController"
                method="execute">
            <result name="success">view/employeemanagement/lessongroup/index.jsp</result>
        </action>
        <action name="lessongroup/details" class="nl.scalda.pasimo.controller.employeemanagement.LessonGroupController"
                method="execute">
            <result name="success">view/employeemanagement/lessongroup/details.jsp</result>
        </action>
        <action name="coachGroups" class="nl.scalda.pasimo.controller.employeemanagement.CoachGroupController"
                method="execute">
            <result name="success">view/employeemanagement/coachgroups/coachgroup.jsp</result>
        </action>
        <action name="students" class="nl.scalda.pasimo.controller.employeemanagement.CoachGroupController"
                method="execute">
            <result name="success">view/employeemanagement/coachgroups/student.jsp</result>
        </action>
        <action name="teacherOverview" class="nl.scalda.pasimo.controller.employeemanagement.TeacherController"
                method="readTeacher">
            <result name="success">view/employeemanagement/teacher/teacherOverview.jsp</result>
        </action>
        <action name="addTeacherPage" class="nl.scalda.pasimo.controller.employeemanagement.TeacherController"
                method="execute">
            <result name="success">view/employeemanagement/teacher/addTeacher.jsp</result>
        </action>
        <action name="addTeacher" class="nl.scalda.pasimo.controller.employeemanagement.TeacherController"
                method="addTeacher">
            <result name="success" type="redirect">teacherOverview</result>
        </action>
        <action name="editTeacherPage" class="nl.scalda.pasimo.controller.employeemanagement.TeacherController"
                method="loadTeacherInfo">
            <result name="success">view/employeemanagement/teacher/editTeacher.jsp</result>
        </action>
        <action name="editTeacher" class="nl.scalda.pasimo.controller.employeemanagement.TeacherController"
                method="updateTeacher">
            <result name="success" type="redirect">teacherOverview</result>
            <result name="input" type="redirect">teacherOverview</result>
        </action>
        <action name="removeTeacher" class="nl.scalda.pasimo.controller.employeemanagement.TeacherController"
                method="removeTeacher">
            <result name="success" type="redirect">teacherOverview</result>
        </action>
        <action name="teacherInfo" class="nl.scalda.pasimo.controller.employeemanagement.TeacherController"
                method="loadTeacherInfo">
            <result name="success">view/employeemanagement/teacher/TeacherInformation.jsp</result>
        </action>
        
        <action name="noteAdd"
                class="nl.scalda.pasimo.controller.employeemanagement.NoteController"
                method="noteAdd">
            <result name="success" type="redirect">noteOverview
            </result>
        </action>
        <action name="noteView"
                class="nl.scalda.pasimo.controller.employeemanagement.NoteController">
            <result name="success">/view/employeemanagement/note/noteAdd.jsp
            </result>
        </action>
        <action name="noteOverview"
                class="nl.scalda.pasimo.controller.employeemanagement.NoteController"
                method="noteOverview">
            <result name="success">/view/employeemanagement/note/noteOverview.jsp
            </result>
        </action>
        <action name="noteEditView"
                class="nl.scalda.pasimo.controller.employeemanagement.NoteController">
            <result name="success">/view/employeemanagement/note/noteEdit.jsp
            </result>
        </action>
        <action name="noteEdit"
                class="nl.scalda.pasimo.controller.employeemanagement.NoteController"
                method="noteEdit">
            <result name="success">/view/employeemanagement/note/noteEdit.jsp
            </result>
        </action>
			
    </package>
</struts>