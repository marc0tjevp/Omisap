<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="nl.scalda.pasimo.model.employeemanagement.Person" table="person">
      <meta attribute="class-description">
         This class contains the person detail. 
      </meta>
      <id name="email" type="string" column="email">
      </id>
      <property name="cardID" column="cardID" type="int"/>
      <property name="firstName" column="firstName" type="string"/>
      <property name="insertion" column="insertion" type="string"/>
      <property name="lastName" column="lastName" type="string"/>
      <property name="dateOfBirth" column="dateOfBirth" type="calendar"/>
   </class>
</hibernate-mapping>